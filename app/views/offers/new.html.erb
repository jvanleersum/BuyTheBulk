<% category = %w(furniture textiles decoration kitchenware\ &\ dinnerware take\ away pots\ &\ plants outdoor) %>
  <div class="container">
    <div class="row justify-content-center" style="margin-top: 4rem">
      <div class="col-lg-6 col-sm-12">
          <%= simple_form_for @offer do |f| %>
            <%= f.input :name, hint: 'Remember, being creative can help you out' %>
            <%= f.input :description, hint: 'Provide a detailed description. Example: Size, material, quality...'%>
            <%= f.input :initial_price, hint: 'What is the current price/unit' %>
            <%= f.input :target_price, hint: 'What is the desired price/unit' %>
            <%= f.input :target_amount, hint: 'What is amount of products to reach the desired price?' %>
            <%= f.input :supplier_offer_url, hint: 'What is the link to the supplier?' %>
            <%= f.input :category, as: :select, include_blank: false, collection: category %>
            <%= f.input :deadline, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%# <%= f.input :photos, as: :file, :input_html => { multiple: :true } %>
            <%= f.button :submit, class: 'button btn-filled' %>
          <% end %>
      </div>
    </div>
  </div>
