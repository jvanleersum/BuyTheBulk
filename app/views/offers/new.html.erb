  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-sm-12">
          <%= simple_form_for @offer do |f| %>
            <%= f.input :name, hint: 'Remember, being creative can help you out' %>
            <%= f.input :description, hint: 'Provide a detailed description. Size, material, quality'%>
            <%= f.input :price %>
            <%= f.input :address, input_html: { data: { geocoder_target: "address" },class: "d-none" },
                wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
            <%= f.input :photos, as: :file, :input_html => { multiple: :true } %>
            <%= f.button :submit, class: 'btn-primary justify-self-center' %>
          <% end %>
      </div>
    </div>
  </div>
