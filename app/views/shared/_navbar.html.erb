<div class="navbar">
<%= link_to 'javascript:history.back()' do %>
  <%= image_tag "back-icon.png", class:"back-icon" %>
<% end %>
<%= link_to root_path do %>
  <%= image_tag "buythebulk-logo.png", class:"buythebulk-logo" %>
<% end %>
  <%= image_tag "burguer-icon.png", class:"burguer-icon avatar-dropdown-toggle", data: {bs_toggle:"dropdown"}%>
   <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "View offers", offers_path, class: "dropdown-item" %>
              <%# <%= link_to "Profile details", profile_page_path, class: "dropdown-item" %>
              <% if user_signed_in? %>
                <%= link_to "Upload an offer", new_offer_path, class: "dropdown-item" %>
                <%= link_to "My orders", orders_path, class: "dropdown-item" %>
                <% unless current_user.business.present? %>
                <%= link_to "Add my business", new_business_path, class: "dropdown-item" %>
                <% else  %>
                <%= link_to edit_business_path(current_user.business), class: "dropdown-item" do %>
                  <% if current_user.business.photo.key %>
                  <%= cl_image_tag current_user.business.photo.key, class: "avatar-small" %>
                  <% else %>
                  <%= image_tag "avatar.jpg", class:"avatar-small"%>
                  <% end %>
                  <%="@#{current_user.business.nickname}" %>
                <% end %>
                <% end %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              <% else %>
                <%= link_to "Log in", new_user_session_path, class: "dropdown-item" %>
                <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item" %>
              <% end %>
            </div>
</div>
