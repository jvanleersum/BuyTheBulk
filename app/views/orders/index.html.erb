<div class="container">

  <div class="header text center">
    <h3>These are your active orders:</h3>
  </div>

    <div class="orders-card flex">
      <% @orders.each do |order| %>
      <div class="order-description flex">
        <div class="order-img">
          <h6>image here</h6>
        </div>
        <div class="order-info">
          <h4><%= order.offer.name %></h4>
          <br>
          <p><%= order.offer.description %></p>
        </div>
        <div class="order-status">
          <%= order.offer.status %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
